@model IEnumerable<Scout.Entities.Footballer>

@{
    ViewBag.Title = "Index";
}
<div class="row">
    <div class="col-md-10 col-md-offset-1">
        <h2>Futbolcular</h2>
        <hr />
    </div>
</div>
<div class="row">
    <div class="col-md-10 col-md-offset-1">
        <p>
            <a href="/Footballer/Create" class="btn btn-primary">
                <span class="fa fa-plus"></span> Create
            </a>
        </p>

    </div>
</div>
<div class="row">
    <div class="col-md-10 col-md-offset-2">
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Country.CountryName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Foot.FootName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.OtherPosition.OtherPositionName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Position.PositionName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Province.ProvinceName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Height)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Weight)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Username)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Lastname)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Password)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DateOfBirth)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PhoneNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IsActive)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Country.CountryName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Foot.FootName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.OtherPosition.OtherPositionName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Position.PositionName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Province.ProvinceName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Height)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Weight)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Username)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Lastname)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Password)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateOfBirth)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PhoneNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsActive)
                    </td>
                    <td>
                        <a href="/Footballer/Edit/@item.Id" class="btn btn-warning btn-xs" title="Düzenle">
                            <span class="fa fa-edit"></span>
                        </a>
                        <a href="/Footballer/Details/@item.Id" class="btn btn-info btn-xs" title="Detaylar">
                            <span class="fa fa-search"></span>
                        </a>
                        <a href="/Footballer/Delete/@item.Id" class="btn btn-danger btn-xs" title="Sil">
                            <span class="fa fa-trash"></span>
                        </a>

                    </td>
                </tr>

            }

        </table>


    </div>
</div>
