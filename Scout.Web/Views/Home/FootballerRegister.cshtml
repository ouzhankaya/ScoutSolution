@using Scout.Entities.ValueObject
@model RegisterViewModel
@{
    ViewBag.Title = "Scout - Footballer Register Form";
    Layout = null;
}
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<script src="~/Scripts/bootstrap.min.js"></script>
<script src="~/Scripts/jquery-1.10.2.js"></script>
<link href="~/Content/login-register.css" rel="stylesheet" />
<link href="~/Content/validation-summary.css" rel="stylesheet" />
<link href="~/Content/informations.css" rel="stylesheet" />
<hr />
<div class="container text-right">
    <a href="@Url.Action("FootballerLogin", "Home")" class="nav-link"><span class="fa fa-sign-in"></span><b style="color:black; font-size:medium">Futbolcu Giriş</b></a>&nbsp;&nbsp;
    <a href="@Url.Action("ManagerLogin", "Home")" class="nav-link"><span class="fa fa-user-plus"></span><b style="color:black; font-size:medium">Menajer Giriş</b></a>&nbsp;&nbsp;
    <a href="@Url.Action("ManagerRegister", "Home")" class="nav-link"><span class="fa fa-user-plus"></span><b style="color:black; font-size:medium">Menajer Kaydı</b></a>
</div>
<hr />

<header class="masthead">
    <div class="overlay">
        <div class="container">
            <h1 class="display-1 text-white">Yeteklerinizi Keşfettirmeye Çok Yaklaştınız!</h1>
            <h2 class="display-4 text-white">Kayıt Ol ve Keşfedilmeyi Kolaylaştır</h2>
        </div>

    </div>
</header>
@using (Html.BeginForm())
{
    <section class="login-info">
        <div class="container">
            <div class="row main">
                <div class="form-header">
                    <h1 class="text-center ">Futbolcu Kayıt Formu</h1>
                </div>
                <div class="main-content">
                    @Html.ValidationSummary(false)
                    <div class="input-group ">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-user" aria-hidden="true"></span></span>
                        @Html.TextBoxFor(model => model.Name, new { @class = "form-control", placeholder = "Adınız" })
                    </div>
                    <div class="input-group ">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-user" aria-hidden="true"></span></span>
                        @Html.TextBoxFor(model => model.Lastname, new { @class = "form-control", placeholder = "Soyadınız" })
                    </div>
                    <div class="input-group ">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-user" aria-hidden="true"></span></span>
                        @Html.TextBoxFor(model => model.Username, new { @class = "form-control", placeholder = "Kullanıcı adınız" })
                    </div>
                    <div class="input-group ">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-envelope" aria-hidden="true"></span></span>
                        @Html.TextBoxFor(model => model.EMail, new { @class = "form-control", placeholder = "E-posta adresiniz." })
                    </div>
                    <div class="input-group">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-lock" aria-hidden="true"></span></span>
                        @Html.TextBoxFor(model => model.Password, new { @class = "form-control", placeholder = "Şifreniz", type = "password" })
                    </div>
                    <div class="input-group ">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-lock" aria-hidden="true"></span></span>
                        @Html.TextBoxFor(model => model.RePassword, new { @class = "form-control", placeholder = "Şifreniz(Tekrar)", type = "password" })
                    </div>
                    <div class="input-group ">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-time" aria-hidden="true"></span></span>
                        @Html.TextBoxFor(model => model.DateOfBirth, "<b>{0:dd/MM/yyyy}</b>", new { @class = "form-control datepicker",type="date", placeholder = "DD/MM/YYYY", maxlength = "100" })
                      @*@Html.TextBoxFor(model => model.DateOfBirth, "(=:dd-MM-yyyy)",
                 new { @type = "date", @class = "form-control" })*@
                    </div>
                    <div class="form-group ">
                        <button type="submit" class="btn btn-danger btn-lg btn-block login-button">Kayıt Ol</button>
                    </div>
                </div>
            </div>
        </div>
    </section>
}