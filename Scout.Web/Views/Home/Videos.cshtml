
@{
    ViewBag.Title = "Profiliniz";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Scout: Profile Page</title>
    <!-- Bootstrap core CSS -->
    <link href="Content/bootstrap.min.css" rel="stylesheet" />

    <!-- Custom styles for this template -->
    <script src="Scripts/bootstrap.min.js"></script>
    <link href="Content/style.css" rel="stylesheet" />
    <script src="Scripts/jquery-1.9.1.min.js"></script>
</head>
<body>
    <section>
        <div class="container">
            @Html.Partial("_PartialProfile")
            <br /><br />
            <div class="row">
                <div class="col-md-8">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title">Bir video,fotoğraf veya yazı paylaş</h3>
                        </div>
                        <div class="panel-body">
                            <form>
                                <div class="form-group">
                                    <textarea class="form-control" placeholder="Paylaşım Yap.."></textarea>
                                </div>
                                <button type="submit" class="btn btn-default">Paylaş</button>
                                <div class="pull-right">
                                    <div class="btn-toolbar">
                                        <button type="button" class="btn btn-default"><i class="glyphicon glyphicon-pencil"></i> Text</button>
                                        <button type="button" class="btn btn-default"><i class="glyphicon glyphicon-camera"></i> Image</button>
                                        <button type="button" class="btn btn-default"><i class="glyphicon glyphicon-facetime-video"></i> Video</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                        @Html.Partial("_PartialVideos")
                    </div>


                </div>
                <div class="col-md-4">
                    &nbsp;&nbsp;&nbsp;
                </div>
            </div>
        </div>
    </section>

    @Bootstrap.ModalPopup(id: "modal_comment", title: "Yorumlar")

    <script src="~/Scripts/comment.js"></script>

</body>
</html>
